<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
    <!-- <data noupdate="1"> -->

        <record id="view_sale_order_tree" model="ir.ui.view">
            <field name="name">Boggio Personalization sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <field name="requested_date" position="replace"/>
                <field name="commitment_date" position="replace"/>
                <field name="effective_date" position="replace"/>
                <!-- <separator string="Dates" position="replace"/> -->
                <field name="date_order" position="replace"/>
                <field name="validity_days" position="replace"/>
                <field name="validity_date" position="replace"/>
                <field name="payment_term_id" position="replace"/>
                <field name="pricelist_id" position="after">
                    <field name="payment_term_id"/>
                    <field name="create_uid" readonly="1"/>
                </field>
                <xpath expr="//notebook" position="before">
                    <group>
                        <group>
                            <field name="date_order"/>
                            <field name="validity_days" string="Validity of Budget Day"/>
                            <field name="validity_date" string="Effective Date Budget"/>
                        </group>
                        <group>
                            <field name="commitment_date" />
                            <field name="effective_date"/>
                            <field name="sale_preparetion_time"/>
                            <field name="requested_date" on_change="onchange_requested_date(requested_date, commitment_date)" string="Requested Delivery Date"/>
                            <div class="oe_title">
                                <button name="update_requested_date" string="â‡’ Update for preparetion time" type="object" class="oe_link"/>
                            </div>
                        </group>
                    </group>
                </xpath>

                <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="before">
                    <field name="additional_description"/>
                </xpath>

                <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
                    <field name="product_brand_id" string="Brand"/>
                    <field name="supplier_code" string="Supplier Code"/>
                    <field name="internal_code" string="Internal Code"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='discount3']" position="after">
                    <field name="price_reduce" string="Discounted Unit Price"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='virtual_available']" position="replace"/> 
                <xpath expr="//field[@name='order_line']//tree//field[@name='discount']" position="replace"/> 
                <xpath expr="//field[@name='order_line']//tree//field[@name='product_uom']" position="replace"/>
                <xpath expr="//field[@name='order_line']//tree//field[@name='tax_id']" position="replace"/>
                <xpath expr="//field[@name='order_line']//tree//field[@name='price_subtotal']" position="before">
                    <!-- porque lo quieren tener ubicado en otro lugar y para que uclte a los que no pueden ver precios -->
                    <field name="tax_id" widget="many2many_tags" domain="[('parent_id','=',False),('type_tax_use','&lt;&gt;','purchase')]"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='price_subtotal']" position="after">
                    <field name="discount" groups="sale.group_discount_per_so_line"/>
                    <field name="product_uom"/>
                    <field name="virtual_available" groups="sale_stock_availability.see_stock_value" attrs="{'invisible':[('state','!=','draft')]}"/>
                </xpath>
            </field>
        </record>       

        <!-- heredamos la visat anterior solo para grupo restrict prices por compatibilidad con price security -->
        <record id="view_sale_order_price_tree" model="ir.ui.view">
            <field name="name">Boggio Personalization sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="view_sale_order_tree"/>
            <field name="groups_id" eval="[(6, 0, [ref('price_security.group_restrict_prices')])]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree//field[@name='tax_id']" position="attributes">
                    <attribute name="attrs">{'readonly':[('product_can_modify_prices','=', False)]}</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_quotation_tree" model="ir.ui.view">
            <field name="name">Boggio Personalization sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="create_uid"/>
                </field>
            </field>
        </record>

        <record id="view_order_tree" model="ir.ui.view">
            <field name="name">Boggio Personalization sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="create_uid"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
